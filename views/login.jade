extends layout

block content
    div.login-form
        form.form-horizontal(action="/auth/login", method="post")
            .form-group
                label.control-label.col-md-3(for="username") Username
                .col-md-3
                    input#username.form-control(type="text", name="username", required) 

            .form-group
                label.control-label.col-md-3(for="pwd") Password
                .col-md-3
                    input#pwd.form-control(type="password", name="password", required) 

            .form-group
                .col-md-offset-3.col-md-3
                    button(type="submit") Login

        a.col-md-offset-3(href="/auth/register", title="Register") not a registered user? click here
